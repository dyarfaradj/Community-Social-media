@model Distribuerade_System_Labb_2.Models.GroupViewModel

@{
    ViewData["Title"] = "CreateGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Group Details</h4>
<hr />
<div class="row">
    @using (Html.BeginForm("CreateGroup", "Groups", FormMethod.Post))
    {
        <div class="col-1">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GroupTitle" name="GroupTitle" class="control-label">Group title</label>
                    @Html.TextBox("GroupTitle")
                    <span asp-validation-for="GroupTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            @if (TempData["ConfirmationMessage"] != null)
            {
                <div class="alert alert-success">@TempData["ConfirmationMessage"]</div>
            }
        </div>
    }
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
