@model Distribuerade_System_Labb_2.Models.SendMessageViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    @using (Html.BeginForm("Create", "Messages", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline" }))
    {
        <div class="col-1">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TitleMessage" name="Title" class="control-label">Message Title</label>
                    @Html.TextBox("TitleMessage")
                    <span asp-validation-for="TitleMessage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Body" name="Body" class="control-label">Message</label>
                    @Html.TextArea("Body")
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SelectedValues" class="control-label">Select people to send to</label>
                    @Html.DropDownListFor(x => x.SelectedValues, Model.Values, new { multiple = "true" })
                    <span asp-validation-for="SelectedValues" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            @if (TempData["ConfirmationMessage"] != null)
            {
                <div class="alert alert-success">@TempData["ConfirmationMessage"]</div>
            }
        </div>
    }
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
