@model Distribuerade_System_Labb_2.Models.SendMessageViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    @using (Html.BeginForm("Create", "Messages", FormMethod.Post,
                                                    new { enctype = "multipart/form-data", @class = "form-inline" }))
    {
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label name="Title" class="control-label"></label>
                    <input name="Title" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  name="Body" class="control-label"></label>
                    <input name="Body" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    @Html.DropDownListFor(x => x.SelectedValues, Model.Values , new { multiple = "true" })
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            @if (TempData["ConfirmationMessage"] != null)
            {
                <div class="alert alert-success">@TempData["ConfirmationMessage"]</div>
            }
        </div>
    }
    </div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
