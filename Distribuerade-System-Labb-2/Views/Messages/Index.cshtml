@model IEnumerable<Distribuerade_System_Labb_2.Areas.Identity.Data.Distribuerade_System_Labb_2User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
               
                <td>
                    <a asp-action="MessageOfUser" asp-route-id="@item.Id">Show messages</a> |
                </td>
            </tr>
        }
    </tbody>
</table>

